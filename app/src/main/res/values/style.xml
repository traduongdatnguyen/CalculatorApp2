<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="textnumber">
        <item name="android:textColor">#000000</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30dp</item>
        <item name="android:gravity">end</item>
    </style>
    <style name="buttonNumber">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">25sp</item>
        <item name="layout_constraintHorizontal_weight">1</item>
        <item name="layout_constraintHorizontal_chainStyle">spread</item>
        <item name="layout_constraintVertical_chainStyle">packed</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:onClick">numberAction</item>
    </style>
    <array name="autosize_text_sizes">
        <item>20sp</item>
        <item>40sp</item>
        <item>60sp</item>
        <item>80sp</item>
        <item>100sp</item>
    </array>

</resources>